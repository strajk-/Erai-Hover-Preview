{
  "manifest_version": 3,
  "name": "Anime Hover Preview",
  "description": "Shows anime poster previews when hovering over titles on Erai-raws",
  "version": "1.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [{
    "matches": ["https://www.erai-raws.info/*"],
    "js": ["content.js"],
    "css": ["styles.css"]
  }]
}
