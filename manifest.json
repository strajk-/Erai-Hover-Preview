{
  "manifest_version": 3,
  "name": "Erai Hover Preview",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [{
    "matches": ["https://www.erai-raws.info/*"],
    "js": ["content.js"],
    "css": ["styles.css"]
  }]
}